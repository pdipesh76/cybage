<h1> post Detail <h1>
    <table>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Description</th>
      </tr>

      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.author %></td>
          <td><%= post.description %></td>
          <td><%= link_to 'Destroy', post , method: :delete %></td>
          <td><%= link_to 'Edit' , edit_post_path(post) %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'View Comments' , post_comments_path(post)  %></td>
        </tr>
      <% end %> 
    </table>
    </br>
    <%= link_to 'New Post' , new_post_path %>
